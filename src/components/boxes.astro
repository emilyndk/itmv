---
import TextDynamisk from "./textdynamisk.astro"

const {pTextT} = Astro.props;
const {pTextB} = Astro.props;
---

<div class="box">
      <div class="card">
            <div class="front">
                <TextDynamisk p={pTextT} />
            </div>
            <div class="back">
                <TextDynamisk p={pTextB} />
            </div>
      </div>
</div>


<style>
.box {
width: 40%;
height: 290px;
  padding: 20px;
   margin: 15px 0;
   background: #E4EBF0;
   color:var(--blueD);
   font-size: 30px;
   font-weight: normal;
   border: 5px dashed var(--red);
   border-radius: 10px;
   box-shadow: 0 0 0 4px #E4EBF0;

   cursor: pointer;
}

.card {
  position: relative;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: transform 0.6s;
  transform-style: preserve-3d;
}

.box.active .card {
  transform: rotateY(180deg);
}

.front, .back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
}

.back {
  transform: rotateY(180deg);
}

@media (max-width: 800px) {
  .box {
width: 45%;
height: 180px;
  padding: 10px;
   margin: 7.5px 0;
   font-size: 15px;
   border: 2.5px dashed var(--red);
}
}
</style>

<script>
let cards = document.querySelectorAll('.box');

cards.forEach(function(card) {

  card.addEventListener('click', function() {
  
  if(card.classList.contains('active')) { 
    card.classList.remove('active');
  }
  else {
    card.classList.add('active');
  }
});
});
</script>



