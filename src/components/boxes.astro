<div class="box">
    <div class="sewline">
        <div class="card">
            <div id="front">
                <img src="/public/facts_graphics/heart_icon.svg" alt="heart icon">
            </div>
            <div id="back">
                <img src="/public/facts_graphics/heart_icon.svg" alt="heart icon">
            </div>
        </div>
    </div>
</div>

<style>
    .sewline {
/*   background-color: transparent; */
  width: 300px;
  height: 300px;
  perspective: 1000px;
}

.card {
  position: relative;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: transform 0.6s;
  transform-style: preserve-3d;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
}

.sewline.active .card {
  transform: rotateY(180deg);
}

#front, #back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
}

.front {
  background-color: #dcd060;
  color: black;
}

.back {
  background-color: #61639e;
  color: white;
  transform: rotateY(180deg);
}
</style>

